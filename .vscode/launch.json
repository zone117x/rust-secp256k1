{
    "version": "0.2.0",
    "configurations": [
        {
          "type": "node",
          "request": "launch",
          "name": "Build Projects",
          "program": "${workspaceFolder}/ts/index.ts",
          "runtimeArgs": ["--experimental-wasm-modules"],
          "preLaunchTask": "npm: build",
          "sourceMaps": true,
          "smartStep": true,
          "internalConsoleOptions": "openOnSessionStart",
          "outFiles": [
              "${workspaceFolder}/dist/**/*.js"
          ]
        }
    ]
}